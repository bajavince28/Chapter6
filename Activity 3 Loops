import java.util.Scanner;

public class BankBalanceNestedLoop {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        double balance;
        double interestRate;

        System.out.print("Enter initial bank balance > ");
        balance = input.nextDouble();

        for (interestRate = 0.02; interestRate <= 0.05; interestRate += 0.01) {
            double newBalance = balance;
            System.out.printf("%nWith an initial balance of $%.1f at an interest rate of %.2f%n", balance, interestRate);

            for (int year = 1; year <= 4; year++) {
                newBalance = newBalance + (newBalance * interestRate);
                System.out.printf("After year %d balance is $%.4f%n", year, newBalance);
            }
        }

        System.out.println("\n----- jGRASP: Operation complete.");
        input.close();
    }
}
